<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>To Do List</title>
  </head>
  <body>
    <header>
      
      <% if (task == null) { %>
      <h2>TO DO LIST</h2>
      <form action="/create" method="post">
        <input type="text" name="task" id="task" placeholder="Add Task" />
        <button id="addButton" type="submit">Adicionar Tarefa</button>
      </form>
      <% } else {%>
      <h2>EDITAR TAREFA</h2>
      <form action="/updateOne/<%= task._id %>" method="post">
        <input type="text" name="task" id="task" value="<%= task.task %>"/>
        <button id="addButton" type="submit">Atualizar Tarefa</button>
      </form>
      <% } %>
    </header>

    <section id="tasks">
      <ul>
        <% tasksList.forEach((task)=>{ %>
          <li>
            <%= task.task %> | <%= task.date.toLocaleDateString("pt-Br")%>
            <a href="/getById/<%= task._id %>/update">Editar</a>
            <a href="/getById/<%= task._id %>/delete">Apagar</a>
          </li>
        <% }) %>
      </ul>
    </section>


    <% if (taskDelete != null) {  %>
    <section id="modal">
      
      <div id="card">
        
        <a href="/">x</a>
        <h2>Confirmação</h2>
        <hr>
        <p>Deseja Apagar Tarefa: <%=taskDelete.task%>? </p>
        <a href="/deleteOne/<%= taskDelete._id %>">Sim</a>
        <a href="/">Não</a>

      </div>
      
    </section>
    <% } %>

    <script src="script.js"></script>
  </body>
</html>
